  "bugs": {
    "url": "https://github.com/cungminh2710/unicode-emoji-utils/issues"
  },
  "homepage": "https://github.com/cungminh2710/unicode-emoji-utils#readme",
  "dependencies": {
    "emoji-regex-xs": "^2.0.0"
  }
